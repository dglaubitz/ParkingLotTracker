@model ParkingLotTracker.Models.Owner

@{
    ViewBag.Title = "AddOwner";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<body id="addOwner">
    <div class="row">
        <h2 class="col-md-4">Add Owner</h2>
    </div>
    <br />
    <br />

    @using (Html.BeginForm("SubmitOwnerInsert", "Home", FormMethod.Post))
    {
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label style="margin-bottom:0px">First Name</label><br />
                    @Html.TextBoxFor(m => m.FirstName)
                </div>
                <div class="form-group">
                    <label style="margin-bottom:0px">Last Name</label><br />
                    @Html.TextBoxFor(m => m.LastName)
                </div>
                <div class="form-group">
                    <label style="margin-bottom:0px">Phone Number</label><br />
                    @Html.TextBoxFor(m => m.PhoneNumber)
                </div>
                <div class="form-group">
                    <label style="margin-bottom:0px">Apartment #</label><br />
                    @Html.TextBoxFor(m => m.ApartmentNumber)
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label style="margin-bottom:0px">Username</label><br />
                    <div>
                        @Html.TextBoxFor(m => m.Username)
                        <span style="color: red">@ViewBag.usernameError</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label style="margin-bottom: 0px">Unit #</label><br />
                    @Html.TextBoxFor(m => m.UnitNumber)
               </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6" align="center">
                <input type="submit" value="Save All Changes" class="btn btn-primary" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                @Html.ActionLink("Vehicle list", "Index", "Home")
            </div>
            <div class="col-md-4">
                @Html.ActionLink("Owner list", "OwnerList", "Home")
            </div>
        </div>
        @Html.HiddenFor(m => m.PlaceholderUsername)
    }
</body>