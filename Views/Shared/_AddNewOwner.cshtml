@model ParkingLotTracker.Models.VehicleInfo

@{
    ViewBag.Title = "AddNewOwner";
}

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label style="margin-bottom:0px">First Name</label><br />
            @Html.TextBoxFor(m => m.VehicleOwner.FirstName, new { TabIndex = 10, style = "width: 115px" })
        </div>
        <div class="form-group">
            <label style="margin-bottom:0px">Apartment #</label><br />
            @Html.TextBoxFor(m => m.VehicleOwner.ApartmentNumber, new { TabIndex = 12, style = "width: 115px" })
        </div>
        <div class="form-group">
            <label style="margin-bottom: 0px">Phone Number</label><br />
            @Html.TextBoxFor(m => m.VehicleOwner.PhoneNumber, new { TabIndex = 14 })
        </div>

    </div>
    <div class="col-md-4">
        <div class="form-group">
            <div class="form-group">
                <label style="margin-bottom:0px">Last Name</label><br />
                @Html.TextBoxFor(m => m.VehicleOwner.LastName, new { TabIndex = 11, style = "width: 115px" })
            </div>
            <div class="form-group">
                <label style="margin-bottom: 0px">Unit #</label><br />
                @Html.TextBoxFor(m => m.VehicleOwner.UnitNumber, new { TabIndex = 13, style = "width: 115px" })
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label style="margin-bottom:0px">Username</label><br />
            <div>
                @Html.TextBoxFor(m => m.VehicleOwner.Username, new { TabIndex = 15 })
                <span style="color: red">@ViewBag.usernameError</span>
            </div>
        </div>
    </div>
    <div>
        @Html.HiddenFor(m => m.VehicleOwner.PlaceholderUsername, new { @Value = @System.Configuration.ConfigurationManager.AppSettings["ownerAddMode"] })
    </div>
</div>